generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Case {
  id        Int       @id @default(autoincrement())
  caseTitle String
  attorney  String
  defendant String
  versions  Version[]
}

model Version {
  id        Int    @id @default(autoincrement())
  versionNo Int
  case      Case   @relation(fields: [caseId], references: [id])
  caseId    Int
  files     File[]
}

model File {
  id         Int     @id @default(autoincrement())
  fileName   String
  fileType   String
  hash       String
  dataSource String // either a url to localpath or base64 for images
  version    Version @relation(fields: [versionId], references: [id])
  versionId  Int
}
